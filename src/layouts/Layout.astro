---
// Supports weights 100-900
import '@fontsource-variable/montserrat';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Platzi Travel" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="robots" content="LayoutPage, follow" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body  class="font-Montserrat bg-[#13151a]">
		<slot />
	</body>
</html>
